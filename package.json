{
  "name": "nestjs-serverless-boilerplate",
  "version": "0.0.1",
  "description": "Nestjs serverless boilerplate",
  "author": "Carlos Daniel Londo√±o Avila",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "test": "jest --testPathIgnorePatterns=handshake",
    "test:watch": "jest --watch --testPathIgnorePatterns=handshake",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:handshake": "jest src/handshake",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:create": "npx typeorm migration:create src/database/migrations/$npm_config_name",
    "migration:generate": "npm run build && npx typeorm migration:generate src/database/migrations/$npm_config_name -d dist/typeorm-cli.config",
    "migration:run": "npm run build && npx typeorm migration:run -d dist/typeorm-cli.config",
    "migration:revert": "npm run build && npx typeorm migration:revert -d dist/typeorm-cli.config",
    "migration:show": "npm run build && npx typeorm migration:show -d dist/typeorm-cli.config",
    "module:generate": "nest g module modules/$npm_config_name",
    "service:generate": "nest g service $npm_config_name $npm_config_module/services --flat",
    "controller:generate": "nest g controller $npm_config_name $npm_config_module/controllers --no-spec --flat",
    "crud:generate": "nest g resource $npm_config_name",
    "dto:generate": "nest g class $npm_config_module/dto/$npm_config_name.dto --flat",
    "decorator:generate": "nest g decorator $npm_config_module/decorators/$npm_config_name",
    "guard:generate": "nest g guard $npm_config_module/guards/$npm_config_name --no-spec",
    "filter:generate": "nest g filter $npm_config_module/filters/$npm_config_name"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "@vendia/serverless-express": "^4.10.3",
    "aws-lambda": "^1.0.7",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "dotenv": "^16.0.3",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "serverless-plugin-optimize": "^4.2.1-rc.1",
    "swagger-ui-express": "^4.6.0",
    "terser-webpack-plugin": "^5.3.9",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/aws-lambda": "^8.10.115",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "class-validator": "^0.14.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-with-jiraid-detection": "^1.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "serverless-offline": "^12.0.4",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-with-jiraid-detection"
    }
  }
}
